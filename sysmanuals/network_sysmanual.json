{
  "id": "network-sysmanual",
  "name": "Network SysManual",
  "description": "Essential networking commands, protocols, and tools for troubleshooting and administration",
  "theme": {
    "primary": "#2196F3",
    "accent": "#1976D2"
  },
  "categories": [
    {
      "id": "common-ports",
      "name": "Common Ports",
      "entries": [
        {
          "id": "http",
          "name": "HTTP",
          "description": "Hypertext Transfer Protocol",
          "content": {
            "Port": "80",
            "Protocol": "TCP",
            "Purpose": "Web traffic (unencrypted)",
            "Service": "Web servers"
          },
          "examples": [
            "curl http://example.com:80",
            "telnet example.com 80",
            "netstat -an | grep :80"
          ],
          "notes": "Standard port for unencrypted web traffic"
        },
        {
          "id": "https",
          "name": "HTTPS",
          "description": "HTTP Secure",
          "content": {
            "Port": "443",
            "Protocol": "TCP",
            "Purpose": "Encrypted web traffic",
            "Service": "Secure web servers"
          },
          "examples": [
            "curl https://example.com:443",
            "openssl s_client -connect example.com:443",
            "netstat -an | grep :443"
          ],
          "notes": "Encrypted web traffic using TLS/SSL"
        },
        {
          "id": "ssh",
          "name": "SSH",
          "description": "Secure Shell",
          "content": {
            "Port": "22",
            "Protocol": "TCP",
            "Purpose": "Secure remote access",
            "Service": "SSH server"
          },
          "examples": [
            "ssh user@hostname",
            "ssh -p 22 user@hostname",
            "netstat -an | grep :22"
          ],
          "notes": "Default port for SSH connections"
        },
        {
          "id": "ftp",
          "name": "FTP",
          "description": "File Transfer Protocol",
          "content": {
            "Port": "21 (control), 20 (data)",
            "Protocol": "TCP",
            "Purpose": "File transfer",
            "Service": "FTP server"
          },
          "examples": [
            "ftp ftp.example.com",
            "telnet example.com 21",
            "netstat -an | grep :21"
          ],
          "notes": "WARNING: Insecure - credentials sent in plain text"
        },
        {
          "id": "smtp",
          "name": "SMTP",
          "description": "Simple Mail Transfer Protocol",
          "content": {
            "Port": "25 (unencrypted), 587 (TLS), 465 (SSL)",
            "Protocol": "TCP",
            "Purpose": "Email transmission",
            "Service": "Mail server"
          },
          "examples": [
            "telnet smtp.example.com 25",
            "netstat -an | grep :25",
            "nc smtp.example.com 587"
          ],
          "notes": "Port 587 preferred for mail submission"
        },
        {
          "id": "dns",
          "name": "DNS",
          "description": "Domain Name System",
          "content": {
            "Port": "53",
            "Protocol": "UDP (queries), TCP (zone transfers)",
            "Purpose": "Domain name resolution",
            "Service": "DNS server"
          },
          "examples": [
            "dig @8.8.8.8 example.com",
            "nslookup example.com 8.8.8.8",
            "netstat -an | grep :53"
          ],
          "notes": "Translates domain names to IP addresses"
        },
        {
          "id": "mysql",
          "name": "MySQL",
          "description": "MySQL Database",
          "content": {
            "Port": "3306",
            "Protocol": "TCP",
            "Purpose": "Database connections",
            "Service": "MySQL server"
          },
          "examples": [
            "mysql -h hostname -P 3306 -u user -p",
            "telnet hostname 3306",
            "netstat -an | grep :3306"
          ],
          "notes": "Default MySQL/MariaDB port"
        },
        {
          "id": "postgresql",
          "name": "PostgreSQL",
          "description": "PostgreSQL Database",
          "content": {
            "Port": "5432",
            "Protocol": "TCP",
            "Purpose": "Database connections",
            "Service": "PostgreSQL server"
          },
          "examples": [
            "psql -h hostname -p 5432 -U user",
            "telnet hostname 5432",
            "netstat -an | grep :5432"
          ],
          "notes": "Default PostgreSQL port"
        },
        {
          "id": "rdp",
          "name": "RDP",
          "description": "Remote Desktop Protocol",
          "content": {
            "Port": "3389",
            "Protocol": "TCP",
            "Purpose": "Windows remote desktop",
            "Service": "Remote Desktop"
          },
          "examples": [
            "rdesktop hostname:3389",
            "telnet hostname 3389",
            "netstat -an | grep :3389"
          ],
          "notes": "Windows remote desktop access"
        },
        {
          "id": "telnet",
          "name": "Telnet",
          "description": "Telnet Protocol",
          "content": {
            "Port": "23",
            "Protocol": "TCP",
            "Purpose": "Remote command-line access (unencrypted)",
            "Service": "Telnet server"
          },
          "examples": [
            "telnet example.com 23",
            "netstat -an | grep :23"
          ],
          "notes": "WARNING: Insecure - transmits credentials and data in plain text"
        },
        {
          "id": "dhcp",
          "name": "DHCP",
          "description": "Dynamic Host Configuration Protocol",
          "content": {
            "Port": "67 (server), 68 (client)",
            "Protocol": "UDP",
            "Purpose": "Automatic IP address assignment",
            "Service": "DHCP server/client"
          },
          "examples": [
            "tcpdump -i eth0 port 67 or port 68",
            "netstat -an | grep :67"
          ],
          "notes": "Used for a client to request an IP address from a server"
        },
        {
          "id": "tftp",
          "name": "TFTP",
          "description": "Trivial File Transfer Protocol",
          "content": {
            "Port": "69",
            "Protocol": "UDP",
            "Purpose": "Simple, non-authenticated file transfer",
            "Service": "TFTP server"
          },
          "examples": [
            "tftp 192.168.1.1 -c get bootfile",
            "netstat -an | grep :69"
          ],
          "notes": "Trivial File Transfer Protocol - no authentication and very simple"
        },
        {
          "id": "pop3",
          "name": "POP3",
          "description": "Post Office Protocol v3",
          "content": {
            "Port": "110 (unencrypted), 995 (SSL)",
            "Protocol": "TCP",
            "Purpose": "Email retrieval (downloads and deletes from server)",
            "Service": "Mail server"
          },
          "examples": [
            "telnet pop.example.com 110",
            "netstat -an | grep :110"
          ],
          "notes": "Less common than IMAP; POP3S (encrypted) uses 995."
        },
        {
          "id": "nntp",
          "name": "NNTP",
          "description": "Network News Transfer Protocol",
          "content": {
            "Port": "119",
            "Protocol": "TCP",
            "Purpose": "Transfer of Usenet news articles",
            "Service": "News server"
          },
          "examples": [
            "telnet news.example.com 119",
            "netstat -an | grep :119"
          ],
          "notes": "Historically used for Usenet newsgroups"
        },
        {
          "id": "ntp",
          "name": "NTP",
          "description": "Network Time Protocol",
          "content": {
            "Port": "123",
            "Protocol": "UDP",
            "Purpose": "Clock synchronization",
            "Service": "NTP server"
          },
          "examples": [
            "ntpdate -q pool.ntp.org",
            "netstat -an | grep :123"
          ],
          "notes": "Essential for time-sensitive services and security protocols"
        },
        {
          "id": "imap",
          "name": "IMAP",
          "description": "Internet Message Access Protocol",
          "content": {
            "Port": "143 (unencrypted), 993 (SSL)",
            "Protocol": "TCP",
            "Purpose": "Email access (manages mail on the server)",
            "Service": "Mail server"
          },
          "examples": [
            "telnet imap.example.com 143",
            "netstat -an | grep :143"
          ],
          "notes": "Allows users to manage and access email from multiple devices. IMAPS (encrypted) uses 993."
        },
        {
          "id": "snmp",
          "name": "SNMP",
          "description": "Simple Network Management Protocol",
          "content": {
            "Port": "161 (agent), 162 (trap)",
            "Protocol": "UDP",
            "Purpose": "Network device monitoring and management",
            "Service": "SNMP agent/manager"
          },
          "examples": [
            "snmpwalk -v 2c -c public 192.168.1.1",
            "netstat -an | grep :161"
          ],
          "notes": "Version 3 adds authentication and encryption"
        },
        {
          "id": "ldap",
          "name": "LDAP",
          "description": "Lightweight Directory Access Protocol",
          "content": {
            "Port": "389 (unencrypted), 636 (SSL)",
            "Protocol": "TCP/UDP",
            "Purpose": "Directory service queries and management",
            "Service": "Directory server"
          },
          "examples": [
            "ldapsearch -h ldap.example.com -p 389",
            "netstat -an | grep :389"
          ],
          "notes": "Used for centralized authentication and directory storage"
        }
      ]
    },
    {
      "id": "connectivity-tools",
      "name": "Connectivity Tools",
      "entries": [
        {
          "id": "ping",
          "name": "ping",
          "description": "Test network connectivity using ICMP",
          "content": {
            "Command": "ping [options] destination",
            "Protocol": "ICMP",
            "Purpose": "Test host reachability"
          },
          "examples": [
            "ping google.com",
            "ping -c 4 192.168.1.1",
            "ping -i 0.5 -c 10 example.com"
          ],
          "details": [
            {
              "label": "-c count",
              "value": "Stop after count packets"
            },
            {
              "label": "-i interval",
              "value": "Wait interval seconds between packets"
            },
            {
              "label": "-s size",
              "value": "Packet size in bytes"
            },
            {
              "label": "-t ttl",
              "value": "Set Time To Live"
            }
          ],
          "notes": "Sends ICMP echo requests to test connectivity"
        },
        {
          "id": "traceroute",
          "name": "traceroute",
          "description": "Trace packet route to destination",
          "content": {
            "Command": "traceroute [options] destination",
            "Protocol": "ICMP/UDP",
            "Purpose": "Map network path"
          },
          "examples": [
            "traceroute google.com",
            "traceroute -n 192.168.1.1",
            "traceroute -m 15 example.com"
          ],
          "details": [
            {
              "label": "-n",
              "value": "Don't resolve hostnames"
            },
            {
              "label": "-m max_ttl",
              "value": "Maximum number of hops"
            },
            {
              "label": "-q nqueries",
              "value": "Probes per hop"
            }
          ],
          "notes": "Shows each hop between source and destination"
        },
        {
          "id": "mtr",
          "name": "mtr",
          "description": "Network diagnostic combining ping and traceroute",
          "content": {
            "Command": "mtr [options] destination",
            "Protocol": "ICMP",
            "Purpose": "Real-time network diagnostics"
          },
          "examples": [
            "mtr google.com",
            "mtr -n 192.168.1.1",
            "mtr --report -c 100 example.com"
          ],
          "details": [
            {
              "label": "-n",
              "value": "No DNS lookups"
            },
            {
              "label": "-c count",
              "value": "Number of..."
            }
          ],
          "notes": "Generates continuous statistics on network path"
        }
      ]
    },
    {
      "id": "network-utilities",
      "name": "Network Utilities",
      "entries": [
        {
          "id": "netcat",
          "name": "netcat (nc)",
          "description": "Swiss Army knife for networking",
          "content": {
            "Command": "nc [options] host port",
            "Protocol": "TCP/UDP",
            "Purpose": "Read/write data across network connections"
          },
          "examples": [
            "nc -l -p 8080 (listen)",
            "nc 192.168.1.1 80 (connect)",
            "echo 'test' | nc 192.168.1.1 80"
          ],
          "details": [
            {
              "label": "-l",
              "value": "Listen mode"
            },
            {
              "label": "-p port",
              "value": "Local port"
            },
            {
              "label": "-v",
              "value": "Verbose"
            },
            {
              "label": "-u",
              "value": "UDP mode"
            }
          ],
          "notes": "Can be used for port scanning, file transfer, and simple chat"
        },
        {
          "id": "netstat",
          "name": "netstat",
          "description": "Display network connections",
          "content": {
            "Command": "netstat [options]",
            "Purpose": "Display network connections"
          },
          "examples": [
            "netstat -tuln",
            "netstat -anp",
            "netstat -r"
          ],
          "details": [
            {
              "label": "-t",
              "value": "TCP connections"
            },
            {
              "label": "-u",
              "value": "UDP connections"
            },
            {
              "label": "-l",
              "value": "Listening sockets"
            },
            {
              "label": "-n",
              "value": "Numerical addresses"
            },
            {
              "label": "-p",
              "value": "Show program/PID"
            }
          ],
          "notes": "WARNING: Deprecated - use 'ss' command"
        },
        {
          "id": "ss",
          "name": "ss",
          "description": "Socket statistics",
          "content": {
            "Command": "ss [options]",
            "Purpose": "Display socket information"
          },
          "examples": [
            "ss -tuln",
            "ss -anp",
            "ss -s"
          ],
          "details": [
            {
              "label": "-t",
              "value": "TCP sockets"
            },
            {
              "label": "-u",
              "value": "UDP sockets"
            },
            {
              "label": "-l",
              "value": "Listening sockets"
            },
            {
              "label": "-n",
              "value": "Don't resolve names"
            },
            {
              "label": "-p",
              "value": "Show process"
            }
          ],
          "notes": "Modern replacement for netstat"
        },
        {
          "id": "tcpdump",
          "name": "tcpdump",
          "description": "Packet capture and analysis",
          "content": {
            "Command": "tcpdump [options]",
            "Protocol": "Various",
            "Purpose": "Capture network packets"
          },
          "examples": [
            "sudo tcpdump -i eth0",
            "sudo tcpdump -i eth0 port 80",
            "sudo tcpdump -i eth0 -w capture.pcap"
          ],
          "details": [
            {
              "label": "-i interface",
              "value": "Capture on interface"
            },
            {
              "label": "-w file",
              "value": "Write to file"
            },
            {
              "label": "-r file",
              "value": "Read from file"
            },
            {
              "label": "port N",
              "value": "Filter by port number"
            },
            {
              "label": "host X",
              "value": "Filter by host address"
            }
          ],
          "notes": "Powerful command-line packet sniffer"
        }
      ]
    },
    {
      "id": "dns-tools",
      "name": "DNS Tools",
      "entries": [
        {
          "id": "nslookup",
          "name": "nslookup",
          "description": "Query DNS servers",
          "content": {
            "Command": "nslookup [domain] [server]",
            "Protocol": "DNS (UDP/TCP port 53)",
            "Purpose": "DNS lookups"
          },
          "examples": [
            "nslookup google.com",
            "nslookup google.com 8.8.8.8",
            "nslookup -type=MX gmail.com"
          ],
          "details": [
            {
              "label": "-type=A",
              "value": "IPv4 addresses"
            },
            {
              "label": "-type=AAAA",
              "value": "IPv6 addresses"
            },
            {
              "label": "-type=MX",
              "value": "Mail servers"
            },
            {
              "label": "-type=NS",
              "value": "Name servers"
            }
          ]
        },
        {
          "id": "dig",
          "name": "dig",
          "description": "Advanced DNS lookup tool",
          "content": {
            "Command": "dig [options] domain [type]",
            "Protocol": "DNS (UDP/TCP port 53)",
            "Purpose": "Detailed DNS queries"
          },
          "examples": [
            "dig google.com",
            "dig @8.8.8.8 example.com",
            "dig +short google.com",
            "dig -x 8.8.8.8"
          ],
          "details": [
            {
              "label": "@server",
              "value": "Query specific DNS server"
            },
            {
              "label": "+short",
              "value": "Short output"
            },
            {
              "label": "-x",
              "value": "Reverse DNS lookup"
            },
            {
              "label": "+trace",
              "value": "Trace delegation path"
            }
          ],
          "notes": "More powerful than nslookup"
        },
        {
          "id": "host",
          "name": "host",
          "description": "Simple DNS lookup",
          "content": {
            "Command": "host [domain] [server]",
            "Protocol": "DNS (UDP/TCP port 53)",
            "Purpose": "Quick DNS lookups"
          },
          "examples": [
            "host google.com",
            "host -t MX gmail.com",
            "host 8.8.8.8"
          ],
          "details": [
            {
              "label": "-t type",
              "value": "Query resource record type (A, MX, NS, etc.)"
            }
          ]
        }
      ]
    },
    {
      "id": "web-tools",
      "name": "Web/Application Tools",
      "entries": [
        {
          "id": "curl",
          "name": "curl",
          "description": "Transfer data with URLs",
          "content": {
            "Command": "curl [options] URL",
            "Protocol": "HTTP/HTTPS/FTP and more",
            "Purpose": "Download or upload data"
          },
          "examples": [
            "curl https://api.example.com",
            "curl -I https://example.com",
            "curl -X POST -d 'data' https://api.example.com"
          ],
          "details": [
            {
              "label": "-I",
              "value": "Fetch headers only"
            },
            {
              "label": "-X method",
              "value": "HTTP method"
            },
            {
              "label": "-d data",
              "value": "Send POST data"
            },
            {
              "label": "-H header",
              "value": "Custom header"
            }
          ]
        },
        {
          "id": "wget",
          "name": "wget",
          "description": "Non-interactive downloader",
          "content": {
            "Command": "wget [options] URL",
            "Protocol": "HTTP/HTTPS/FTP",
            "Purpose": "Retrieve files from the web"
          },
          "examples": [
            "wget https://example.com/file.zip",
            "wget -r http://example.com"
          ],
          "details": [
            {
              "label": "-r",
              "value": "Recursive download"
            },
            {
              "label": "-O file",
              "value": "Save to file"
            },
            {
              "label": "--limit-rate=X",
              "value": "Limit download speed"
            }
          ],
          "notes": "Best for simple, non-interactive downloads"
        }
      ]
    },
    {
      "id": "security-tools",
      "name": "Security and Firewall",
      "entries": [
        {
          "id": "iptables",
          "name": "iptables",
          "description": "Linux kernel firewall management",
          "content": {
            "Command": "iptables [options] command",
            "Purpose": "Configure packet filtering rules"
          },
          "examples": [
            "sudo iptables -L -v -n",
            "sudo iptables -A INPUT -p tcp --dport 22 -j ACCEPT",
            "sudo iptables -P INPUT DROP"
          ],
          "details": [
            {
              "label": "-L",
              "value": "List rules"
            },
            {
              "label": "-A chain",
              "value": "Append rule to chain"
            },
            {
              "label": "-P chain",
              "value": "Set default policy"
            },
            {
              "label": "-j target",
              "value": "Target (ACCEPT, DROP, REJECT)"
            }
          ],
          "notes": "Low-level firewall utility, complex to manage"
        },
        {
          "id": "ufw",
          "name": "ufw",
          "description": "Uncomplicated Firewall",
          "content": {
            "Command": "ufw [command]",
            "Purpose": "Simple firewall management"
          },
          "examples": [
            "sudo ufw status",
            "sudo ufw enable",
            "sudo ufw allow 22",
            "sudo ufw deny 23"
          ],
          "details": [
            {
              "label": "enable",
              "value": "Enable firewall"
            },
            {
              "label": "disable",
              "value": "Disable firewall"
            },
            {
              "label": "allow",
              "value": "Allow connections"
            },
            {
              "label": "deny",
              "value": "Deny connections"
            }
          ],
          "notes": "Simpler than iptables"
        },
        {
          "id": "nmap",
          "name": "nmap",
          "description": "Network scanner",
          "content": {
            "Command": "nmap [options] target",
            "Purpose": "Port scanning and discovery"
          },
          "examples": [
            "nmap 192.168.1.1",
            "nmap -sP 192.168.1.0/24",
            "nmap -p 80,443 example.com"
          ],
          "details": [
            {
              "label": "-sP",
              "value": "Ping scan"
            },
            {
              "label": "-sS",
              "value": "TCP SYN scan (stealth)"
            },
            {
              "label": "-p ports",
              "value": "Specify ports"
            },
            {
              "label": "-A",
              "value": "OS and version detection"
            }
          ],
          "notes": "Essential for security auditing and network inventory"
        }
      ]
    }
  ]
}
