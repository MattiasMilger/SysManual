{
  "id": "network-sysmanual",
  "name": "Network SysManual",
  "description": "Essential networking commands, protocols, and troubleshooting tools",
  "theme": {
    "primary": "#2196F3",
    "accent": "#1976D2"
  },
  "categories": [
    {
      "id": "protocols",
      "name": "Network Protocols",
      "entries": [
        {
          "id": "tcp",
          "name": "TCP",
          "description": "Transmission Control Protocol - Reliable, connection-oriented protocol",
          "content": {
            "Type": "Transport Layer Protocol",
            "Features": "Connection-oriented, reliable delivery, ordered packets",
            "Use Cases": "HTTP, HTTPS, SSH, FTP, Email"
          },
          "examples": [
            {
              "command": "netstat -ant",
              "description": "View all TCP connections"
            },
            {
              "command": "ss -t",
              "description": "List TCP sockets (modern alternative)"
            }
          ],
          "notes": "Guarantees packet delivery through acknowledgments and retransmission"
        },
        {
          "id": "udp",
          "name": "UDP",
          "description": "User Datagram Protocol - Fast, connectionless protocol",
          "content": {
            "Type": "Transport Layer Protocol",
            "Features": "Connectionless, no delivery guarantee, fast",
            "Use Cases": "DNS, DHCP, VoIP, streaming, gaming"
          },
          "examples": [
            {
              "command": "netstat -anu",
              "description": "View all UDP connections"
            },
            {
              "command": "ss -u",
              "description": "List UDP sockets"
            }
          ],
          "notes": "No connection setup or acknowledgments - faster but less reliable than TCP"
        },
        {
          "id": "icmp",
          "name": "ICMP",
          "description": "Internet Control Message Protocol - Network diagnostics and error reporting",
          "content": {
            "Type": "Network Layer Protocol",
            "Features": "Error messages, network diagnostics, no data transfer",
            "Use Cases": "Ping, traceroute, network error reporting"
          },
          "examples": [
            {
              "command": "ping 8.8.8.8",
              "description": "Test connectivity using ICMP echo request/reply"
            },
            {
              "command": "traceroute google.com",
              "description": "Trace route using ICMP time-exceeded messages"
            },
            {
              "command": "tcpdump icmp",
              "description": "Capture all ICMP traffic"
            }
          ],
          "notes": "Used by ping, traceroute, and for network error messages (destination unreachable, time exceeded)"
        },
        {
          "id": "ip",
          "name": "IP (IPv4/IPv6)",
          "description": "Internet Protocol - Routes packets across networks",
          "content": {
            "Type": "Network Layer Protocol",
            "IPv4": "32-bit addresses (e.g., 192.168.1.1)",
            "IPv6": "128-bit addresses (e.g., 2001:db8::1)",
            "Purpose": "Routing and addressing"
          },
          "examples": [
            {
              "command": "ip addr show",
              "description": "Display all IP addresses assigned to interfaces"
            },
            {
              "command": "ip route show",
              "description": "View routing table"
            },
            {
              "command": "ip -6 addr",
              "description": "Show IPv6 addresses only"
            }
          ],
          "notes": "Foundation of internet communication - handles packet routing between networks"
        },
        {
          "id": "dns-protocol",
          "name": "DNS Protocol",
          "description": "Domain Name System - Translates domain names to IP addresses",
          "content": {
            "Port": "53 (UDP for queries, TCP for zone transfers)",
            "Type": "Application Layer Protocol",
            "Purpose": "Domain name resolution"
          },
          "examples": [
            {
              "command": "dig google.com",
              "description": "Query DNS records with detailed output"
            },
            {
              "command": "nslookup example.com",
              "description": "Simple DNS lookup"
            },
            {
              "command": "host -t MX gmail.com",
              "description": "Query specific record type (mail servers)"
            }
          ],
          "notes": "Hierarchical system - queries go from root servers → TLD servers → authoritative servers"
        },
        {
          "id": "http-protocol",
          "name": "HTTP/HTTPS",
          "description": "Hypertext Transfer Protocol - Web communication",
          "content": {
            "HTTP Port": "80 (unencrypted)",
            "HTTPS Port": "443 (TLS/SSL encrypted)",
            "Type": "Application Layer Protocol",
            "Methods": "GET, POST, PUT, DELETE, HEAD, OPTIONS"
          },
          "examples": [
            {
              "command": "curl -I https://example.com",
              "description": "View HTTP response headers"
            },
            {
              "command": "curl -X POST -d 'key=value' https://api.example.com",
              "description": "Send POST request with data"
            },
            {
              "command": "openssl s_client -connect example.com:443",
              "description": "Test HTTPS/TLS connection and view certificate"
            }
          ],
          "notes": "HTTPS adds TLS encryption - always prefer HTTPS over HTTP for security"
        },
        {
          "id": "dhcp-protocol",
          "name": "DHCP",
          "description": "Dynamic Host Configuration Protocol - Automatic IP address assignment",
          "content": {
            "Ports": "67 (server), 68 (client)",
            "Protocol": "UDP",
            "Process": "DISCOVER → OFFER → REQUEST → ACK"
          },
          "examples": [
            {
              "command": "sudo dhclient -r && sudo dhclient",
              "description": "Release and renew DHCP lease"
            },
            {
              "command": "tcpdump -i eth0 port 67 or port 68",
              "description": "Monitor DHCP traffic"
            }
          ],
          "notes": "Four-step process: client discovers servers, server offers IP, client requests it, server acknowledges"
        }
      ]
    },
    {
      "id": "common-ports",
      "name": "Common Service Ports",
      "entries": [
        {
          "id": "ssh",
          "name": "SSH - Port 22",
          "description": "Secure Shell for encrypted remote access",
          "content": {
            "Port": "22",
            "Protocol": "TCP",
            "Security": "Encrypted"
          },
          "examples": [
            {
              "command": "ssh user@hostname",
              "description": "Connect to remote server"
            },
            {
              "command": "ssh -p 2222 user@hostname",
              "description": "Connect using non-standard port"
            },
            {
              "command": "ssh -i ~/.ssh/id_rsa user@hostname",
              "description": "Connect using specific SSH key"
            }
          ],
          "notes": "Default port for secure remote administration - encrypted and secure"
        },
        {
          "id": "telnet",
          "name": "Telnet - Port 23",
          "description": "Unencrypted remote access (deprecated)",
          "content": {
            "Port": "23",
            "Protocol": "TCP",
            "Security": "⚠️ Unencrypted - avoid using"
          },
          "examples": [
            {
              "command": "telnet hostname 80",
              "description": "Test port connectivity (not for actual Telnet sessions)"
            }
          ],
          "notes": "⚠️ INSECURE: Transmits everything in plain text including passwords. Use SSH instead"
        },
        {
          "id": "smtp-ports",
          "name": "SMTP - Ports 25, 587, 465",
          "description": "Simple Mail Transfer Protocol for email transmission",
          "content": {
            "Port 25": "Unencrypted (server-to-server)",
            "Port 587": "Submission with STARTTLS (preferred)",
            "Port 465": "SMTPS (SSL/TLS)",
            "Protocol": "TCP"
          },
          "examples": [
            {
              "command": "telnet smtp.gmail.com 587",
              "description": "Test SMTP connection"
            },
            {
              "command": "openssl s_client -connect smtp.gmail.com:465",
              "description": "Test encrypted SMTP connection"
            }
          ],
          "notes": "Port 587 is preferred for mail submission from clients. Port 25 often blocked by ISPs"
        },
        {
          "id": "web-ports",
          "name": "HTTP/HTTPS - Ports 80, 443",
          "description": "Web traffic ports",
          "content": {
            "Port 80": "HTTP (unencrypted)",
            "Port 443": "HTTPS (encrypted)",
            "Protocol": "TCP"
          },
          "examples": [
            {
              "command": "curl http://example.com",
              "description": "Access website on default HTTP port"
            },
            {
              "command": "curl https://example.com",
              "description": "Access website securely on HTTPS port"
            },
            {
              "command": "netstat -an | grep ':80\\|:443'",
              "description": "Check web server connections"
            }
          ],
          "notes": "Modern websites should use HTTPS (443) exclusively for security"
        },
        {
          "id": "dns-port",
          "name": "DNS - Port 53",
          "description": "Domain Name System queries",
          "content": {
            "Port": "53",
            "Protocol": "UDP (queries), TCP (zone transfers)"
          },
          "examples": [
            {
              "command": "dig @8.8.8.8 example.com",
              "description": "Query Google's DNS server"
            },
            {
              "command": "dig +short example.com",
              "description": "Get just the IP address"
            },
            {
              "command": "dig -x 8.8.8.8",
              "description": "Reverse DNS lookup"
            }
          ],
          "notes": "UDP for normal queries, TCP for zone transfers and responses over 512 bytes"
        },
        {
          "id": "ftp-ports",
          "name": "FTP - Ports 20, 21",
          "description": "File Transfer Protocol (insecure)",
          "content": {
            "Port 21": "Control connection",
            "Port 20": "Data transfer",
            "Protocol": "TCP",
            "Security": "⚠️ Unencrypted"
          },
          "examples": [
            {
              "command": "ftp ftp.example.com",
              "description": "Connect to FTP server (not recommended)"
            },
            {
              "command": "sftp user@hostname",
              "description": "Use secure FTP over SSH instead"
            }
          ],
          "notes": "⚠️ INSECURE: Use SFTP (SSH File Transfer Protocol) or FTPS instead"
        },
        {
          "id": "database-ports",
          "name": "Database Ports",
          "description": "Common database server ports",
          "content": {
            "MySQL/MariaDB": "3306",
            "PostgreSQL": "5432",
            "MongoDB": "27017",
            "Redis": "6379"
          },
          "examples": [
            {
              "command": "mysql -h hostname -P 3306 -u user -p",
              "description": "Connect to MySQL database"
            },
            {
              "command": "psql -h hostname -p 5432 -U user",
              "description": "Connect to PostgreSQL database"
            }
          ],
          "notes": "Database ports should never be exposed to the internet - use SSH tunnels or VPNs"
        },
        {
          "id": "mail-retrieval",
          "name": "POP3/IMAP - Email Retrieval",
          "description": "Protocols for retrieving email",
          "content": {
            "POP3": "Port 110 (995 encrypted)",
            "IMAP": "Port 143 (993 encrypted)",
            "Difference": "POP3 downloads and deletes, IMAP keeps on server"
          },
          "examples": [
            {
              "command": "openssl s_client -connect imap.gmail.com:993",
              "description": "Connect to secure IMAP server"
            }
          ],
          "notes": "IMAP preferred for modern email - allows multi-device access. Always use encrypted ports (993/995)"
        },
        {
          "id": "rdp-port",
          "name": "RDP - Port 3389",
          "description": "Remote Desktop Protocol for Windows",
          "content": {
            "Port": "3389",
            "Protocol": "TCP",
            "Platform": "Windows"
          },
          "examples": [
            {
              "command": "rdesktop hostname:3389",
              "description": "Connect via Remote Desktop (Linux client)"
            },
            {
              "command": "xfreerdp /v:hostname",
              "description": "Connect using FreeRDP client"
            }
          ],
          "notes": "Windows remote desktop - should be protected with VPN, never exposed directly to internet"
        }
      ]
    },
    {
      "id": "connectivity-tools",
      "name": "Connectivity Testing",
      "entries": [
        {
          "id": "ping",
          "name": "ping",
          "description": "Test basic network connectivity using ICMP",
          "content": {
            "Protocol": "ICMP",
            "Purpose": "Test if host is reachable"
          },
          "examples": [
            {
              "command": "ping google.com",
              "description": "Test basic internet connectivity"
            },
            {
              "command": "ping -c 4 192.168.1.1",
              "description": "Send exactly 4 packets then stop"
            },
            {
              "command": "ping -i 0.2 -c 20 example.com",
              "description": "Fast ping - send packet every 0.2 seconds"
            }
          ],
          "details": [
            {"label": "-c count", "value": "Number of packets to send"},
            {"label": "-i interval", "value": "Seconds between packets (default 1)"},
            {"label": "-W timeout", "value": "Wait timeout seconds for reply"}
          ],
          "notes": "Tests basic connectivity - if ping fails, check cables, IP config, firewall, or gateway"
        },
        {
          "id": "traceroute",
          "name": "traceroute",
          "description": "Trace the network path to a destination",
          "content": {
            "Protocol": "ICMP/UDP",
            "Purpose": "Show each hop (router) between source and destination"
          },
          "examples": [
            {
              "command": "traceroute google.com",
              "description": "Show all hops to reach Google"
            },
            {
              "command": "traceroute -n 192.168.1.1",
              "description": "Skip DNS lookups for faster results"
            },
            {
              "command": "traceroute -m 15 example.com",
              "description": "Limit to maximum 15 hops"
            }
          ],
          "details": [
            {"label": "-n", "value": "Don't resolve IP addresses to hostnames"},
            {"label": "-m max_ttl", "value": "Maximum number of hops to check"},
            {"label": "-q queries", "value": "Number of probes per hop"}
          ],
          "notes": "Useful for finding where network problems occur - look for timeouts (*) or high latency"
        },
        {
          "id": "mtr",
          "name": "mtr",
          "description": "Continuous network diagnostics combining ping and traceroute",
          "content": {
            "Protocol": "ICMP",
            "Purpose": "Real-time path analysis with statistics"
          },
          "examples": [
            {
              "command": "mtr google.com",
              "description": "Live network path monitoring (press 'q' to quit)"
            },
            {
              "command": "mtr --report -c 100 example.com",
              "description": "Generate statistical report after 100 packets"
            },
            {
              "command": "mtr -n 192.168.1.1",
              "description": "Skip DNS lookups for faster display"
            }
          ],
          "details": [
            {"label": "-n", "value": "Skip DNS resolution"},
            {"label": "-c count", "value": "Number of pings per hop"},
            {"label": "--report", "value": "Generate report and exit (non-interactive)"}
          ],
          "notes": "Shows packet loss and latency for each hop - better than traceroute for diagnosing intermittent issues"
        },
        {
          "id": "netcat",
          "name": "netcat (nc)",
          "description": "Network Swiss Army knife - test any TCP/UDP port",
          "content": {
            "Protocol": "TCP/UDP",
            "Purpose": "Raw network connections for testing"
          },
          "examples": [
            {
              "command": "nc -zv example.com 80",
              "description": "Test if port 80 is open"
            },
            {
              "command": "nc -l -p 8080",
              "description": "Listen on port 8080 for incoming connections"
            },
            {
              "command": "echo 'GET / HTTP/1.0' | nc example.com 80",
              "description": "Manually send HTTP request"
            }
          ],
          "details": [
            {"label": "-z", "value": "Port scanning mode (no data transfer)"},
            {"label": "-v", "value": "Verbose output"},
            {"label": "-l", "value": "Listen mode (act as server)"},
            {"label": "-u", "value": "Use UDP instead of TCP"}
          ],
          "notes": "Extremely versatile - use for port testing, simple file transfers, or debugging protocols"
        }
      ]
    },
    {
      "id": "dns-tools",
      "name": "DNS Troubleshooting",
      "entries": [
        {
          "id": "dig",
          "name": "dig",
          "description": "Detailed DNS query tool (most powerful)",
          "content": {
            "Purpose": "Comprehensive DNS diagnostics"
          },
          "examples": [
            {
              "command": "dig example.com",
              "description": "Full DNS query with detailed response"
            },
            {
              "command": "dig +short example.com",
              "description": "Just show the IP address"
            },
            {
              "command": "dig @8.8.8.8 example.com",
              "description": "Query specific DNS server (Google DNS)"
            },
            {
              "command": "dig example.com MX",
              "description": "Query mail server records"
            },
            {
              "command": "dig +trace example.com",
              "description": "Show full DNS resolution path from root servers"
            }
          ],
          "details": [
            {"label": "+short", "value": "Minimal output (just the answer)"},
            {"label": "+trace", "value": "Trace delegation path from root servers"},
            {"label": "@server", "value": "Query specific DNS server"},
            {"label": "Record types", "value": "A, AAAA, MX, NS, TXT, CNAME, SOA"}
          ],
          "notes": "Most powerful DNS tool - shows query details, response time, and full DNS information"
        },
        {
          "id": "nslookup",
          "name": "nslookup",
          "description": "Simple DNS lookup (available on all systems)",
          "content": {
            "Purpose": "Basic DNS queries"
          },
          "examples": [
            {
              "command": "nslookup google.com",
              "description": "Look up IP address for domain"
            },
            {
              "command": "nslookup google.com 8.8.8.8",
              "description": "Query specific DNS server"
            },
            {
              "command": "nslookup -type=MX gmail.com",
              "description": "Query mail server records"
            }
          ],
          "details": [
            {"label": "-type=A", "value": "IPv4 address"},
            {"label": "-type=AAAA", "value": "IPv6 address"},
            {"label": "-type=MX", "value": "Mail exchange servers"},
            {"label": "-type=NS", "value": "Nameservers"}
          ],
          "notes": "Simple and widely available, but 'dig' provides more detailed information"
        },
        {
          "id": "host",
          "name": "host",
          "description": "Quick DNS lookup (simplest output)",
          "content": {
            "Purpose": "Fast DNS resolution"
          },
          "examples": [
            {
              "command": "host google.com",
              "description": "Quick IP lookup"
            },
            {
              "command": "host -t MX gmail.com",
              "description": "Query mail servers"
            },
            {
              "command": "host 8.8.8.8",
              "description": "Reverse DNS lookup (IP to hostname)"
            }
          ],
          "notes": "Simplest DNS tool - good for quick lookups"
        }
      ]
    },
    {
      "id": "network-analysis",
      "name": "Network Analysis",
      "entries": [
        {
          "id": "ss",
          "name": "ss",
          "description": "Socket statistics - view active connections (modern tool)",
          "content": {
            "Purpose": "Display network socket information"
          },
          "examples": [
            {
              "command": "ss -tuln",
              "description": "List all listening TCP/UDP ports"
            },
            {
              "command": "ss -tunap",
              "description": "Show all connections with process names (needs root)"
            },
            {
              "command": "ss -s",
              "description": "Display summary statistics"
            },
            {
              "command": "ss dst 192.168.1.1",
              "description": "Show connections to specific IP"
            }
          ],
          "details": [
            {"label": "-t", "value": "TCP sockets"},
            {"label": "-u", "value": "UDP sockets"},
            {"label": "-l", "value": "Listening sockets only"},
            {"label": "-n", "value": "Don't resolve service names"},
            {"label": "-p", "value": "Show process using socket"}
          ],
          "notes": "Modern replacement for netstat - faster and more detailed"
        },
        {
          "id": "netstat",
          "name": "netstat",
          "description": "Network statistics (older tool, still common)",
          "content": {
            "Purpose": "Display network connections and statistics"
          },
          "examples": [
            {
              "command": "netstat -tuln",
              "description": "List all listening TCP/UDP ports"
            },
            {
              "command": "netstat -anp",
              "description": "Show all connections with programs"
            },
            {
              "command": "netstat -r",
              "description": "Display routing table"
            }
          ],
          "notes": "⚠️ Deprecated - use 'ss' command instead (faster and more features)"
        },
        {
          "id": "tcpdump",
          "name": "tcpdump",
          "description": "Packet capture and analysis (network sniffer)",
          "content": {
            "Purpose": "Capture raw network packets",
            "Permissions": "Requires root/sudo"
          },
          "examples": [
            {
              "command": "sudo tcpdump -i eth0",
              "description": "Capture all traffic on eth0 interface"
            },
            {
              "command": "sudo tcpdump -i any port 80",
              "description": "Capture HTTP traffic on all interfaces"
            },
            {
              "command": "sudo tcpdump -i eth0 -w capture.pcap",
              "description": "Save packets to file for analysis in Wireshark"
            },
            {
              "command": "sudo tcpdump -i eth0 host 192.168.1.1",
              "description": "Capture traffic to/from specific host"
            }
          ],
          "details": [
            {"label": "-i interface", "value": "Capture on specific interface ('any' for all)"},
            {"label": "-w file", "value": "Write packets to file"},
            {"label": "-r file", "value": "Read packets from file"},
            {"label": "port N", "value": "Filter by port number"},
            {"label": "host X", "value": "Filter by IP address"}
          ],
          "notes": "Powerful troubleshooting tool - use filters to avoid overwhelming output. Analyze .pcap files in Wireshark"
        },
        {
          "id": "ip-command",
          "name": "ip",
          "description": "Configure and display network interfaces (modern tool)",
          "content": {
            "Purpose": "Network interface and routing configuration"
          },
          "examples": [
            {
              "command": "ip addr show",
              "description": "Display all network interfaces and IP addresses"
            },
            {
              "command": "ip route show",
              "description": "Show routing table"
            },
            {
              "command": "ip link show",
              "description": "Show network interface status (up/down)"
            },
            {
              "command": "ip -s link",
              "description": "Show interface statistics (packets, errors)"
            }
          ],
          "details": [
            {"label": "addr", "value": "Manage IP addresses"},
            {"label": "route", "value": "Manage routing table"},
            {"label": "link", "value": "Manage network interfaces"},
            {"label": "-s", "value": "Show statistics"}
          ],
          "notes": "Modern replacement for ifconfig, route, and arp commands"
        },
        {
          "id": "nmap",
          "name": "nmap",
          "description": "Network scanner and security auditing tool",
          "content": {
            "Purpose": "Port scanning and network discovery"
          },
          "examples": [
            {
              "command": "nmap 192.168.1.1",
              "description": "Scan common ports on single host"
            },
            {
              "command": "nmap -sn 192.168.1.0/24",
              "description": "Discover all hosts on network (ping scan)"
            },
            {
              "command": "nmap -p 80,443 example.com",
              "description": "Scan specific ports only"
            },
            {
              "command": "nmap -A 192.168.1.1",
              "description": "Aggressive scan (OS detection, version detection)"
            }
          ],
          "details": [
            {"label": "-sn", "value": "Ping scan (no port scan)"},
            {"label": "-sS", "value": "TCP SYN scan (stealthy)"},
            {"label": "-p", "value": "Specify ports"},
            {"label": "-A", "value": "Enable OS and version detection"}
          ],
          "notes": "⚠️ Only scan networks you own or have permission to scan - unauthorized scanning is illegal"
        }
      ]
    },
    {
      "id": "web-tools",
      "name": "Web & HTTP Tools",
      "entries": [
        {
          "id": "curl",
          "name": "curl",
          "description": "Transfer data with URLs - the ultimate HTTP client",
          "content": {
            "Protocols": "HTTP, HTTPS, FTP, and more",
            "Purpose": "Download, upload, and test web services"
          },
          "examples": [
            {
              "command": "curl https://api.example.com",
              "description": "Fetch data from URL"
            },
            {
              "command": "curl -I https://example.com",
              "description": "Show only HTTP response headers"
            },
            {
              "command": "curl -X POST -d 'key=value' https://api.example.com",
              "description": "Send POST request with data"
            },
            {
              "command": "curl -H 'Authorization: Bearer token' https://api.example.com",
              "description": "Add custom HTTP header"
            },
            {
              "command": "curl -o file.zip https://example.com/file.zip",
              "description": "Download file and save with specific name"
            }
          ],
          "details": [
            {"label": "-I", "value": "Fetch headers only (HEAD request)"},
            {"label": "-X method", "value": "HTTP method (GET, POST, PUT, DELETE)"},
            {"label": "-d data", "value": "Send POST data"},
